" Options
set confirm=permdelete
set dotdirs=
set findprg='fd -IHL --ignore-file ~/.config/git/ignore %A'
set grepprg='rg -n'
set history=100
set ignorecase
set incsearch
set locateprg='fd -IHL --ignore-file ~/.config/git/ignore %a /'
set nohlsearch
set smartcase
set sortnumbers
set statusline="%z %= %A %14d"
set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
set syscalls
set vifminfo=tui,savedirs,registers,chistory,dhistory,fhistory,shistory
set vimhelp
set wildmenu
set wildstyle=popup

" Commands
colorscheme dracula

" Custom commands
command! df df -h %m
command! diff vim -d %f %F
command! make !!make %a
command! mkcd :mkdir %a | cd %a
command! reload :write | restart
command! run !! ./%f
command! tar tar czf %d:t.tar.gz %f
command! vgrep vim "+grep %a"
command! zip zip -r %f.zip %f

" Marks
mark c ~/.config
mark d ~/Downloads/Linux/System/Repositories/dotfiles
mark D ~/Downloads/
mark f ~/.config/fish/functions
mark h ~
mark l ~/.local
mark r ~/Downloads/Linux/System/Repositories
mark R /
mark s ~/.local/scripts

" File associations
" Image
filextype *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.xpm
        \ {View in xviewer}
        \ xviewer %f %i,
        \ {Edit in GIMP}
        \ gimp %f %i
fileviewer *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.xpm
         \ identify

" Audio
filetype *.wav,*.mp3,*.flac,*.m4a,*.wma,*.ape,*.ac3,*.og[agx],*.spx,*.opus
       \ {Play using VLC}
       \ vlc %f %i
fileviewer *.wav,*.mp3,*.flac,*.m4a,*.wma,*.ape,*.ac3,*.og[agx],*.spx,*.opus
       \ mediainfo

" Video
filextype *.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.mpeg,*.vob,*.fl[icv],
         \*.m2v,*.mov,*.webm,*.ts,*.mts,*.m4v,*.r[am],*.qt,*.divx,*.as[fx]
         \ {Play using VLC}
         \ vlc %f %i
fileviewer *.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.mpeg,*.vob,
          \*.fl[icv],*.m2v,*.mov,*.webm,*.ts,*.mts,*.m4v,*.r[am],*.qt,*.divx,
          \*.as[fx]
         \ mediainfo

" Archive
filetype *.zip,*.jar,*.war,*.ear,*.oxt,*.apkg
       \ {Mount with fuse-zip}
       \ FUSE_MOUNT|fuse-zip %SOURCE_FILE %DESTINATION_DIR
       \ {View contents}
       \ zip -sf %c | less,
       \ {Extract here}
       \ unzip,
fileviewer *.zip,*.jar,*.war,*.ear,*.oxt zip -sf
filetype *.tar,*.tar.bz2,*.tbz2,*.tgz,*.tar.gz,*.tar.xz,*.txz
       \ {Mount with archivemount}
       \ FUSE_MOUNT|archivemount %SOURCE_FILE %DESTINATION_DIR
fileviewer *.tgz,*.tar.gz tar tzf
fileviewer *.tar.bz2,*.tbz2 tar tjf
fileviewer *.tar.txz,*.txz,*.tar.xz tar Jtf
fileviewer *.tar tar tf
filetype *.rar
       \ {Mount with rar2fs}
       \ FUSE_MOUNT|rar2fs %SOURCE_FILE %DESTINATION_DIR
fileviewer *.rar unrar v
filetype *.7z
       \ {Mount with fuse-7z}
       \ FUSE_MOUNT|fuse-7z %SOURCE_FILE %DESTINATION_DIR,
fileviewer *.7z 7z l

" ISO
filetype *.iso
       \ {Mount with fuseiso}
       \ FUSE_MOUNT|fuseiso %SOURCE_FILE %DESTINATION_DIR
fileviewer *.iso isoinfo -d -i

" Document
fileviewer *.doc catdoc

" PDF
filextype *.pdf
        \ {Open with Google Chrome}
        \ google-chrome %f %i
fileviewer *.pdf pdftotext -nopgbrk %c -

" HTML
filextype *.html,*.htm
        \ {Open with Google Chrome}
        \ google-chrome %f %i
filetype *.html,*.htm links
fileviewer *.html,*.htm links -dump

" Packages
filetype *.deb
        \ {Install with apt}
        \ apt install ./%c
fileviewer *.deb dpkg-deb -I

" Man page
filetype *.[1-8] man ./
fileviewer *.[1-8] man ./%c | col -b

" Object
filetype *.o nm %f | less

" Checksum
filetype *.md5
       \ {Check MD5 hash sum}
       \ md5sum -c %f %S
filetype *.sha1
       \ {Check SHA1 hash sum}
       \ sha1sum -c %f %S
filetype *.sha256
       \ {Check SHA256 hash sum}
       \ sha256sum -c %f %S
filetype *.sha512
       \ {Check SHA512 hash sum}
       \ sha512sum -c %f %S

" Signature
filetype *.asc
       \ {Check signature}
       \ !!gpg --verify

" Directory
filextype */
        \ {View in Nemo}
        \ nemo -t %b %i,
        \ {View in VS Code}
        \ code %f %i

" Mappings
nnoremap ,c :write | edit $MYVIFMRC | restart<CR>
nnoremap ,t :!alacritty &<CR>
nnoremap ,w :set wrap!<CR>
nnoremap <F3> :!bat %f<CR>
nnoremap <F4> :edit<CR>
nnoremap <F5> :copy<CR>
nnoremap <F6> :move<CR>
nnoremap <F7> :mkdir<Space>
nnoremap <F8> :delete<CR>
nnoremap A cw
nnoremap cc cw<C-u>
nnoremap gb :file &<CR>l
nnoremap I cw<C-a>
nnoremap o :!vim %f<CR>
nnoremap s :shell<CR>
nnoremap S :sort<CR>
nnoremap w :view<CR>
nnoremap yd :!echo %d | xclip %i<CR>
nnoremap yf :!echo %c:p | xclip %i<CR>
vnoremap w :view<CR>gv
